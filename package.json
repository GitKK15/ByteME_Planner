{
  "name": "byteme-planner",
  "version": "1.0.0",
  "description": "ByteME Student Planner Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-win": "electron-builder --win",
    "package-mac": "electron-builder --mac",
    "package-linux": "electron-builder --linux"
  },
  "author": "Kk",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.2.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.byteme.planner",
    "productName": "ByteME Planner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}